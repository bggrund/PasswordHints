<Window x:Class="PasswordHints.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordHints"
        mc:Ignorable="d"
        Title="PasswordHints" 
        Height="584" Width="660"
        MinHeight="590" MinWidth="355"
        x:Name="mainWindow" WindowStartupLocation="CenterScreen" Icon="pack://application:,,,/lock_white_fill.png"
        FocusManager.FocusedElement="{Binding ElementName=SearchTermTextBox}">
    <!-- Resources -->
    <Window.Resources>
        <BitmapImage x:Key="DownTriangle" UriSource="pack://application:,,,/triangle_down.png"/>
        <BitmapImage x:Key="RightTriangle" UriSource="pack://application:,,,/triangle_right.png"/>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="0 5 5 0"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="5 5 5 0"/>
        </Style>
        <Style x:Key="NewAccountDataTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Margin" Value="0 5 5 0"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="NewAccountDataTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Margin" Value="0 5 5 0"/>
            <Setter Property="Height" Value="25"/>
        </Style>
        <Style x:Key="AccountDataTextBlockStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="Padding" Value="0 6"/>
            <Setter Property="Margin" Value="0 5 5 0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="AccountDataTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Margin" Value="0 5 5 0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type GroupBox}">
            <Setter Property="Margin" Value="5 0"/>
        </Style>
        <ControlTemplate x:Key="CollapseButtonBase" TargetType="Button">
            <Border HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" 
                    Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="0">
                <ContentPresenter VerticalAlignment="{TemplateBinding VerticalContentAlignment}" 
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
            </Border>
        </ControlTemplate>
        <Style x:Key="CollapseButton" TargetType="{x:Type Button}">
            <Setter Property="Template" Value="{StaticResource CollapseButtonBase}"/>
            <EventSetter Event="Click" Handler="CollapseButton_Click"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="0 0 3 3"/>
            <Setter Property="Panel.ZIndex" Value="1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Content">
                <Setter.Value>
                    <Image Source="{StaticResource RightTriangle}" Stretch="Uniform" Height="15"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#10333388"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel>
            <!-- Menu -->
            <Menu Background="Transparent" Margin="0 0 0 5">
                <MenuItem Header="File">
                    <MenuItem Header="Choose account data file..." Command="{Binding AccountDataCollectionViewModel.ChooseAccountDataFileCommand}"/>
                </MenuItem>
            </Menu>

            <Grid>
                <!-- New Item Group Box -->
                <GroupBox x:Name="NewItemGroupBox" Header="New Item" Padding="0 0 0 5" Height="25" MinHeight="25" MaxHeight="197">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="90"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Style="{StaticResource NewAccountDataTextBlockStyle}" Text="Website:"/>
                                <TextBlock Style="{StaticResource NewAccountDataTextBlockStyle}" Text="Email:"/>
                                <TextBlock Style="{StaticResource NewAccountDataTextBlockStyle}" Text="Username:"/>
                                <TextBlock Style="{StaticResource NewAccountDataTextBlockStyle}" TextAlignment="Right" Height="Auto">
                                            <Run Text="Misc Info/"/><LineBreak/><Run Text="Password Hint:"/>
                                </TextBlock>
                                <!--TextBlock Style="{StaticResource NewAccountDataTextBlockStyle}" Text="PasswordHint:"/-->
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBox Style="{StaticResource NewAccountDataTextBoxStyle}" 
                                     Text="{Binding AccountDataViewModel.Website, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBox Style="{StaticResource NewAccountDataTextBoxStyle}" 
                                     Text="{Binding AccountDataViewModel.Email, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBox Style="{StaticResource NewAccountDataTextBoxStyle}" 
                                     Text="{Binding AccountDataViewModel.Username, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBox Style="{StaticResource NewAccountDataTextBoxStyle}" 
                                     Text="{Binding AccountDataViewModel.PasswordHint, UpdateSourceTrigger=PropertyChanged}"
                                     Height="44"
                                     VerticalScrollBarVisibility="Auto"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"/>
                            </StackPanel>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Button Content="Clear Fields" 
                                Height="25"
                                Command="{Binding AccountDataViewModel.ClearFieldsCommand}"/>
                            <Button Grid.Column="1" 
                                Content="Add Item"
                                CommandParameter="{Binding AccountDataViewModel}"
                                Command="{Binding AccountDataCollectionViewModel.AddItemCommand}"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
                
                <!-- New Item Collapse/Show Button -->
                <Button Style="{StaticResource CollapseButton}" Tag="{Binding Name, ElementName=NewItemGroupBox}"/>
            </Grid>

            <Grid>
                <!-- Search Group Box -->
                <GroupBox x:Name="SearchGroupBox" Header="Search" Height="83" MinHeight="25" MaxHeight="83">
                    <StackPanel>
                        <Grid>
                            <TextBox Text="{Binding AccountDataCollectionViewModel.SearchText, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" Height="25" VerticalAlignment="Center" VerticalContentAlignment="Center" x:Name="SearchTermTextBox" Margin="5"/>
                            <TextBlock IsHitTestVisible="False" Text="Search Here" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="DarkGray">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <Button x:Name="btnClearText" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="25" Height="25" Margin="0 0 5 0" Click="btnClearText_Click">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 -3 0 3" Height="14">
                                <Bold>x</Bold>
                                </TextBlock>
                            </Button>
                        </Grid>
                        <WrapPanel Orientation="Horizontal" Margin="5 0 5 5">
                            <CheckBox Content="Website" IsChecked="{Binding AccountDataCollectionViewModel.SearchWebsite}"/>
                            <CheckBox Content="Email" IsChecked="{Binding AccountDataCollectionViewModel.SearchEmail}"/>
                            <CheckBox Content="Username" IsChecked="{Binding AccountDataCollectionViewModel.SearchUsername}"/>
                            <CheckBox Content="PasswordHint" IsChecked="{Binding AccountDataCollectionViewModel.SearchPasswordHint}"/>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Search Group Box Collapse/Show Button -->
                <Button Style="{StaticResource CollapseButton}" Tag="{Binding Name, ElementName=SearchGroupBox}">
                    <Image Source="{StaticResource DownTriangle}" Stretch="Uniform" Height="15"/>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Item Collection -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Disabled" Margin="5">
            <WrapPanel FlowDirection="LeftToRight" Orientation="Horizontal">
                <ItemsControl x:Name="AccountDataItemsControl" ItemsSource="{Binding AccountDataCollectionViewModel.CollectionView, Mode=TwoWay}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="AccountDataItem" BorderBrush="Gray" Width="300" Height="200" BorderThickness="1" CornerRadius="3,3,3,3" Margin="5,5,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Button CommandParameter="{Binding}"
                                            Command="{Binding DataContext.AccountDataCollectionViewModel.RemoveItemCommand, ElementName=mainWindow}"
                                            HorizontalAlignment="Left" VerticalAlignment="Top" Width="18" Height="18" ToolTip="Remove" Margin="4,4,0,0"
                                            Click="RemoveItemButtonClick">
                                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-3,0,3" Height="14">
                                            <Bold>x</Bold>
                                        </TextBlock>
                                    </Button>
                                    <StackPanel Margin="0 10 0 0">
                                        <TextBlock Text="Website:" Style="{StaticResource AccountDataTextBlockStyle}"/>
                                        <TextBlock Text="Email:" Style="{StaticResource AccountDataTextBlockStyle}"/>
                                        <TextBlock Text="Username:" Style="{StaticResource AccountDataTextBlockStyle}"/>
                                        <TextBlock Style="{StaticResource AccountDataTextBlockStyle}" TextAlignment="Right" Height="Auto">
                                            <Run Text="Misc Info/"/><LineBreak/><Run Text="Password Hint:"/>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="0 10 0 0">
                                        <TextBox FontSize="12" Text="{Binding Website}" Style="{StaticResource AccountDataTextBoxStyle}" LostFocus="SaveAccountData"/>
                                        <TextBox FontSize="12" Text="{Binding Email}" Style="{StaticResource AccountDataTextBoxStyle}" LostFocus="SaveAccountData"/>
                                        <TextBox FontSize="12" Text="{Binding Username}" Style="{StaticResource AccountDataTextBoxStyle}" LostFocus="SaveAccountData"/>
                                        <TextBox FontSize="12" Text="{Binding PasswordHint}" Style="{StaticResource AccountDataTextBoxStyle}" 
                                                 VerticalScrollBarVisibility="Auto" VerticalContentAlignment="Top" Height="72" 
                                                 TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True"
                                                 LostFocus="SaveAccountData"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>
        
    </Grid>
    
